<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        // Safely embed server-side values as JSON
        let status = <%- JSON.stringify(status) %>;
        let BASEurl = <%- JSON.stringify(url) %>;

        console.log("url==", BASEurl);

        if (status === "verify") {
            console.log("Redirecting to signin:", BASEurl);
            if (confirm("Do you want to login?")) {
                window.location.href = BASEurl + "/signin";
            }
        }
    </script>
</head>
<body>
    <h1><%= email%></h1>
    <form action="" method="post">
        <input type="password" name="password" placeholder="Enter New Password" id="password"/><br/>
        <input type="submit" value="submit"/>
    </form>
</body>
</html>